<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-neutral-900">Authors</h1>
      <p class="text-neutral-600 mt-1">Manage your author collection</p>
    </div>
    <div class="flex gap-3">
      <%= link_to new_author_path, class: "px-6 py-2 bg-gradient-to-r from-purple-500 to-purple-600 text-white font-medium rounded-lg hover:from-purple-600 hover:to-purple-700 transition shadow-sm" do %>
        Add New Author
      <% end %>
      <%= link_to bulk_new_authors_path, class: "px-6 py-2 bg-white border-2 border-purple-500 text-purple-700 font-medium rounded-lg hover:bg-purple-50 transition shadow-sm" do %>
        Bulk Add Authors
      <% end %>
    </div>
  </div>

  <% if @authors.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @authors.each do |author| %>
        <div class="bg-white rounded-lg shadow-sm border border-neutral-200 overflow-hidden hover:shadow-md transition">
          <div class="h-2 bg-gradient-to-r from-purple-400 to-purple-500"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-neutral-900 mb-2"><%= author.name %></h3>

            <% if author.nationality.present? || author.gender.present? %>
              <div class="text-sm text-neutral-500 mb-4">
                <% if author.nationality.present? %>
                  <span><%= author.nationality %></span>
                <% end %>
                <% if author.nationality.present? && author.gender.present? %>
                  <span class="mx-1">‚Ä¢</span>
                <% end %>
                <% if author.gender.present? %>
                  <span><%= author.gender.titleize %></span>
                <% end %>
              </div>
            <% end %>

            <div class="space-y-2 text-sm text-neutral-600 mb-4">
              <div class="flex items-center gap-2">
                <span class="font-medium"><%= pluralize(author.books.count, 'book') %></span>
              </div>
              <div class="flex items-center gap-2">
                <span class="font-medium"><%= pluralize(author.series.count, 'series') %></span>
              </div>
            </div>

            <div class="flex gap-2 pt-4 border-t border-neutral-100">
              <%= link_to "Edit", edit_author_path(author), class: "flex-1 px-4 py-2 bg-purple-100 text-purple-700 font-medium rounded-lg hover:bg-purple-200 transition text-center text-sm" %>
              <%= button_to "Delete", author_path(author), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this author?" }, class: "flex-1 px-4 py-2 bg-red-50 text-red-600 font-medium rounded-lg hover:bg-red-100 transition text-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20 bg-white rounded-lg border border-neutral-200">
      <div class="text-6xl mb-4">üìù</div>
      <h3 class="text-xl font-semibold text-neutral-900 mb-2">No authors yet</h3>
      <p class="text-neutral-600 mb-6">Start building your author collection</p>
      <%= link_to "Add Your First Author", new_author_path, class: "inline-block px-6 py-2 bg-gradient-to-r from-purple-500 to-purple-600 text-white font-medium rounded-lg hover:from-purple-600 hover:to-purple-700 transition" %>
    </div>
  <% end %>
</div>
