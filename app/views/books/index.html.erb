<!-- Page Header -->
<div class="mb-10 flex items-center justify-between">
  <div>
    <h1 class="text-4xl font-bold text-neutral-900 mb-2">Books</h1>
    <p class="text-neutral-600">Browse your autumn collection</p>
  </div>
  <div class="flex gap-3">
    <%= link_to new_book_path, class: "px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-lg hover:from-purple-600 hover:to-pink-600 transition shadow-sm hover:shadow-md" do %>
      <span class="text-lg">+ Add Book</span>
    <% end %>
    <%= link_to bulk_new_books_path, class: "px-6 py-3 bg-gradient-to-r from-orange-500 to-amber-500 text-white font-medium rounded-lg hover:from-orange-600 hover:to-amber-600 transition shadow-sm hover:shadow-md" do %>
      <span class="text-lg">+ Bulk Add</span>
    <% end %>
  </div>
</div>

<!-- Search and Filters -->
<div class="bg-white rounded-xl border border-neutral-200 p-6 mb-8">
  <%= form_with url: books_path, method: :get, class: "space-y-4" do |form| %>
    <!-- Search Bar -->
    <div>
      <label class="block text-sm font-medium text-neutral-700 mb-2">Search by title</label>
      <div class="relative">
        <%= form.text_field :search,
          value: params[:search],
          placeholder: "Search books...",
          class: "w-full px-4 py-3 pr-10 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition" %>
        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-neutral-400">üîç</span>
      </div>
    </div>

    <!-- Filters Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Author Filter -->
      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-2">Author</label>
        <%= form.collection_select :author_id,
          @authors,
          :id,
          :name,
          { prompt: "All authors", selected: params[:author_id] },
          { class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition" } %>
      </div>

      <!-- Status Filter -->
      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-2">Status</label>
        <%= form.select :status,
          options_for_select(
            [["All statuses", ""], ["Unread", "unread"], ["Reading", "reading"], ["Read", "read"], ["TBR", "tbr"], ["DNF", "dnf"]],
            params[:status]
          ),
          {},
          { class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition" } %>
      </div>

      <!-- Genre Filter -->
      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-2">Genre</label>
        <%= form.collection_select :genre_id,
          @genres,
          :id,
          :name,
          { prompt: "All genres", selected: params[:genre_id] },
          { class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition" } %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-3">
      <%= form.submit "Apply Filters", class: "px-6 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-lg hover:from-purple-600 hover:to-pink-600 transition cursor-pointer" %>
      <%= link_to "Clear", books_path, class: "px-6 py-2 bg-neutral-100 text-neutral-700 font-medium rounded-lg hover:bg-neutral-200 transition" %>
    </div>
  <% end %>
</div>

<% if @books.any? %>
  <!-- Book Count -->
  <div class="mb-6 flex items-center justify-between">
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-lg border border-neutral-200 text-sm text-neutral-600">
      <span class="text-orange-500">üìö</span>
      <span><%= @books.total_count %> <%= @books.total_count == 1 ? 'book' : 'books' %></span>
    </div>
  </div>

  <!-- Books Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <div class="group bg-white rounded-xl border border-neutral-200 hover:border-orange-300 transition-all duration-200 hover:shadow-lg overflow-hidden">
        <!-- Accent Bar -->
        <div class="h-1 bg-gradient-to-r from-orange-400 via-amber-400 to-orange-300"></div>

        <div class="p-6">
          <!-- Title, Status, and Ownership -->
          <div class="flex items-start justify-between gap-3 mb-3">
            <h2 class="text-xl font-semibold text-neutral-900 leading-tight group-hover:text-orange-600 transition-colors flex-1">
              <%= book.title %>
            </h2>
            <div class="flex items-center gap-2">
              <!-- Ownership Icon -->
              <% if book.ownership.present? %>
                <%
                  ownership_icons = {
                    'owned' => { icon: '‚úÖ', tooltip: 'Owned', color: 'text-green-600' },
                    'borrowed' => { icon: 'üìñ', tooltip: 'Borrowed', color: 'text-blue-600' },
                    'wishlist' => { icon: 'üí∞', tooltip: 'Wishlist', color: 'text-purple-600' },
                    'sold' => { icon: '‚ùå', tooltip: 'Sold', color: 'text-red-600' }
                  }
                  ownership_data = ownership_icons[book.ownership] || { icon: 'üìö', tooltip: book.ownership, color: 'text-neutral-600' }
                %>
                <span class="relative group/tooltip text-lg <%= ownership_data[:color] %> cursor-help">
                  <%= ownership_data[:icon] %>
                  <span class="absolute bottom-full right-0 mb-2 hidden group-hover/tooltip:block w-max px-2 py-1 bg-neutral-900 text-white text-xs rounded whitespace-nowrap">
                    <%= ownership_data[:tooltip] %>
                  </span>
                </span>
              <% end %>

              <!-- Status Badge -->
              <% if book.status.present? %>
                <%
                  status_colors = {
                    'unread' => 'bg-neutral-100 text-neutral-700 border-neutral-300',
                    'reading' => 'bg-blue-100 text-blue-700 border-blue-300',
                    'read' => 'bg-green-100 text-green-700 border-green-300',
                    'tbr' => 'bg-purple-100 text-purple-700 border-purple-300',
                    'dnf' => 'bg-pink-100 text-pink-700 border-pink-300'
                  }
                  color_class = status_colors[book.status] || 'bg-neutral-100 text-neutral-700 border-neutral-300'
                %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold uppercase <%= color_class %> border whitespace-nowrap">
                  <%= book.status %>
                </span>
              <% end %>
            </div>
          </div>

          <!-- Rating -->
          <% if book.rating.present? %>
            <div class="mb-3">
              <span class="text-amber-400 text-lg">
                <%= "‚≠ê" * book.rating %>
              </span>
            </div>
          <% end %>

          <!-- Page Count and Reading Time -->
          <% if book.page_count.present? %>
            <div class="mb-3 flex items-center gap-3 text-sm text-neutral-600">
              <span class="flex items-center gap-1">
                <span class="text-neutral-500">üìÑ</span>
                <%= book.page_count %> pages
              </span>
              <% if book.estimated_reading_time.present? %>
                <span class="text-neutral-400">‚Ä¢</span>
                <span class="flex items-center gap-1">
                  <span class="text-neutral-500">‚è±Ô∏è</span>
                  <%= book.estimated_reading_time %>
                </span>
              <% end %>
            </div>
          <% end %>

          <!-- Author and Series -->
          <div class="mb-4">
            <p class="text-sm text-neutral-500 mb-1">Author</p>
            <p class="text-neutral-900 font-medium">
              <%= book.author.name %>
            </p>
            <% if book.series.present? %>
              <p class="text-sm text-purple-600 mt-1 italic">
                üìö <%= book.series.name %>
              </p>
            <% end %>
          </div>

          <!-- Genres -->
          <% if book.genres.any? %>
            <div class="mb-6">
              <p class="text-sm text-neutral-500 mb-2">Genres</p>
              <div class="flex flex-wrap gap-2">
                <% book.genres.each do |genre| %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-orange-50 text-orange-700 border border-orange-200">
                    <%= genre.name %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Actions -->
          <div class="flex gap-2 pt-4 border-t border-neutral-100">
            <%= link_to edit_book_path(book), class: "flex-1 px-4 py-2 bg-purple-50 text-purple-700 text-sm font-medium rounded-lg hover:bg-purple-100 transition text-center border border-purple-200" do %>
              Edit
            <% end %>
            <%= link_to duplicate_book_path(book), class: "flex-1 px-4 py-2 bg-orange-50 text-orange-700 text-sm font-medium rounded-lg hover:bg-orange-100 transition text-center border border-orange-200" do %>
              Duplicate
            <% end %>
            <%= button_to book_path(book), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this book?" }, class: "flex-1 px-4 py-2 bg-pink-50 text-pink-700 text-sm font-medium rounded-lg hover:bg-pink-100 transition border border-pink-200" do %>
              Delete
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @books.total_pages > 1 %>
    <div class="mt-12 flex justify-center">
      <nav class="flex items-center gap-2">
        <% if @books.prev_page %>
          <%= link_to "‚Üê Previous", url_for(params.permit(:search, :author_id, :status, :genre_id, :page).merge(page: @books.prev_page)), class: "px-4 py-2 bg-white border border-neutral-300 rounded-lg text-neutral-700 hover:bg-neutral-50 transition text-sm font-medium" %>
        <% else %>
          <span class="px-4 py-2 bg-neutral-100 border border-neutral-200 rounded-lg text-neutral-400 cursor-not-allowed text-sm font-medium">‚Üê Previous</span>
        <% end %>

        <% (1..@books.total_pages).each do |page| %>
          <% if page == @books.current_page %>
            <span class="px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg text-sm font-medium"><%= page %></span>
          <% else %>
            <%= link_to page, url_for(params.permit(:search, :author_id, :status, :genre_id, :page).merge(page: page)), class: "px-4 py-2 bg-white border border-neutral-300 rounded-lg text-neutral-700 hover:bg-neutral-50 transition text-sm font-medium" %>
          <% end %>
        <% end %>

        <% if @books.next_page %>
          <%= link_to "Next ‚Üí", url_for(params.permit(:search, :author_id, :status, :genre_id, :page).merge(page: @books.next_page)), class: "px-4 py-2 bg-white border border-neutral-300 rounded-lg text-neutral-700 hover:bg-neutral-50 transition text-sm font-medium" %>
        <% else %>
          <span class="px-4 py-2 bg-neutral-100 border border-neutral-200 rounded-lg text-neutral-400 cursor-not-allowed text-sm font-medium">Next ‚Üí</span>
        <% end %>
      </nav>
    </div>
  <% end %>

<% else %>
  <!-- Empty State -->
  <div class="max-w-md mx-auto text-center py-16">
    <div class="w-20 h-20 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <span class="text-4xl">
        <% if params[:search].present? || params[:author_id].present? || params[:status].present? || params[:genre_id].present? %>
          üîç
        <% else %>
          üìö
        <% end %>
      </span>
    </div>
    <h2 class="text-2xl font-semibold text-neutral-900 mb-2">
      <% if params[:search].present? || params[:author_id].present? || params[:status].present? || params[:genre_id].present? %>
        No books found
      <% else %>
        No books yet
      <% end %>
    </h2>
    <p class="text-neutral-600">
      <% if params[:search].present? || params[:author_id].present? || params[:status].present? || params[:genre_id].present? %>
        Try adjusting your filters or <%= link_to "clear them", books_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
      <% else %>
        Start building your collection
      <% end %>
    </p>
  </div>
<% end %>
