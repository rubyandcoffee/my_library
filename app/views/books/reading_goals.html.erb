<div class="space-y-8">
  <!-- Page Header with Year Selector -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-4xl font-bold text-neutral-900 mb-2">Reading Goals <%= @year %></h1>
      <p class="text-neutral-600">Plan and track your reading journey month by month</p>
    </div>

    <!-- Year Navigation -->
    <div class="flex items-center gap-3">
      <%= link_to reading_goals_path(year: @year - 1), class: "px-4 py-2 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 transition" do %>
        ‚Üê <%= @year - 1 %>
      <% end %>
      <%= link_to reading_goals_path(year: Date.today.year), class: "px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-lg hover:from-purple-600 hover:to-pink-600 transition" do %>
        This Year
      <% end %>
      <%= link_to reading_goals_path(year: @year + 1), class: "px-4 py-2 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 transition" do %>
        <%= @year + 1 %> ‚Üí
      <% end %>
    </div>
  </div>

  <!-- Stats Summary -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Card 1: Total Books Planned -->
    <div class="bg-white rounded-xl border border-neutral-200 p-6">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center text-white text-2xl">
          üìö
        </div>
        <div>
          <p class="text-sm text-neutral-600">Total Books Planned</p>
          <p class="text-3xl font-bold text-neutral-900"><%= @total_books %></p>
        </div>
      </div>
    </div>

    <!-- Card 2: Overall Goal (with inline editing) -->
    <div class="bg-white rounded-xl border border-neutral-200 p-6">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-amber-600 rounded-lg flex items-center justify-center text-white text-2xl">
          üéØ
        </div>
        <div class="flex-1">
          <p class="text-sm text-neutral-600">Overall Goal</p>
          <%= turbo_frame_tag "yearly_goal_#{@yearly_goal.id}" do %>
            <%= render partial: "yearly_reading_goals/goal_display", locals: { yearly_goal: @yearly_goal } %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Card 3: Completion Rate (combined with Books Completed) -->
    <div class="bg-white rounded-xl border border-neutral-200 p-6">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center text-white text-2xl">
          üìä
        </div>
        <div>
          <p class="text-sm text-neutral-600">Completion Rate</p>
          <p class="text-2xl font-bold text-neutral-900">
            <%= @read_books %> / <%= @yearly_goal.target_books %> (<%= @completion_percentage %>%)
          </p>
        </div>
      </div>
    </div>

    <!-- Card 4: Reading Settings -->
    <div class="bg-white rounded-xl border border-neutral-200 p-6">
      <div class="flex items-start gap-3">
        <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white text-2xl flex-shrink-0">
          ‚öôÔ∏è
        </div>
        <div class="flex-1">
          <p class="text-sm text-neutral-600 mb-2">Reading Settings</p>
          <%= turbo_frame_tag "user_settings_display" do %>
            <%= render partial: "user_settings/settings_display", locals: { user_setting: @user_settings } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @total_books == 0 %>
    <!-- Empty State -->
    <div class="text-center py-20 bg-white rounded-xl border border-neutral-200">
      <div class="text-6xl mb-4">üìÖ</div>
      <h3 class="text-xl font-semibold text-neutral-900 mb-2">No reading goals set for <%= @year %></h3>
      <p class="text-neutral-600 mb-6">Start planning your reading journey by adding goal dates to your books</p>
      <%= link_to "Go to Books", books_path, class: "inline-block px-6 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-lg hover:from-purple-600 hover:to-pink-600 transition" %>
    </div>
  <% else %>
    <!-- Monthly Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% Date::MONTHNAMES[1..12].each_with_index do |month_name, index| %>
        <% month_num = index + 1 %>
        <% books = @books_by_month[month_num] %>
        <% current_month = Date.today.month == month_num && Date.today.year == @year %>

        <div class="bg-white rounded-xl border <%= current_month ? 'border-purple-300 shadow-lg' : 'border-neutral-200' %> overflow-hidden">
          <!-- Month Header -->
          <div class="bg-gradient-to-r <%= current_month ? 'from-purple-500 to-pink-500' : 'from-neutral-100 to-neutral-200' %> px-6 py-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-bold <%= current_month ? 'text-white' : 'text-neutral-800' %>">
                <%= month_name %>
                <% if current_month %>
                  <span class="ml-2 text-xs font-normal opacity-90">(Current)</span>
                <% end %>
              </h3>
              <span class="px-3 py-1 <%= current_month ? 'bg-white/20 text-white' : 'bg-neutral-300 text-neutral-700' %> rounded-full text-sm font-semibold">
                <%= books.count %>
              </span>
            </div>
          </div>

          <!-- Reading Limit Progress Bar -->
          <% if books.any? %>
            <% stats = @monthly_stats[month_num] %>
            <% hours_planned = (stats[:total_minutes] / 60.0).round(1) %>
            <% hours_capacity = (stats[:monthly_capacity] / 60.0).round(1) %>
            <% percentage = [stats[:percentage_used], 100].min %> <!-- Cap visual bar at 100% -->

            <div class="px-6 py-4 border-b border-neutral-200 bg-neutral-50">
              <!-- Progress Bar -->
              <div class="mb-2">
                <div class="flex items-center justify-between text-xs mb-1">
                  <span class="font-medium text-neutral-700">Reading Time</span>
                  <span class="text-neutral-600"><%= hours_planned %> / <%= hours_capacity %> hours</span>
                </div>
                <div class="w-full bg-neutral-200 rounded-full h-2.5 overflow-hidden">
                  <%
                    bar_color = case stats[:status]
                    when :over_limit
                      "bg-red-500"
                    when :at_limit
                      "bg-yellow-500"
                    else
                      "bg-green-500"
                    end
                  %>
                  <div class="<%= bar_color %> h-2.5 rounded-full transition-all duration-300" style="width: <%= percentage %>%"></div>
                </div>
              </div>

              <!-- Status Messages -->
              <div class="space-y-1">
                <% if stats[:status] == :over_limit %>
                  <div class="flex items-center gap-1 text-xs text-red-700">
                    <span>‚ö†Ô∏è</span>
                    <span class="font-medium">Over limit by <%= (hours_planned - hours_capacity).round(1) %> hours (<%= stats[:percentage_used] %>%)</span>
                  </div>
                <% elsif stats[:status] == :at_limit %>
                  <div class="flex items-center gap-1 text-xs text-yellow-700">
                    <span>‚ö†Ô∏è</span>
                    <span class="font-medium">Near capacity (<%= stats[:percentage_used] %>%)</span>
                  </div>
                <% else %>
                  <div class="text-xs text-green-700">
                    <span class="font-medium"><%= (100 - stats[:percentage_used]) %>% remaining</span>
                  </div>
                <% end %>

                <% if stats[:books_missing_pages].any? %>
                  <div class="flex items-center gap-1 text-xs text-orange-700">
                    <span>‚ö†Ô∏è</span>
                    <span><%= stats[:books_missing_pages].count %> book(s) missing page count (using 250 page default)</span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Books List -->
          <div class="p-4">
            <% if books.any? %>
              <div class="space-y-3">
                <% books.each do |book| %>
                  <div class="border border-neutral-200 rounded-lg p-3 hover:border-purple-300 hover:bg-purple-50 transition">
                    <%= link_to edit_book_path(book), class: "block" do %>
                      <h4 class="font-semibold text-neutral-900 text-sm mb-1"><%= book.title %></h4>
                      <p class="text-xs text-neutral-600 mb-2">by <%= book.author.name %></p>

                      <!-- Status Badge -->
                      <%
                        status_configs = {
                          'unread' => { class: 'bg-neutral-100 text-neutral-700', label: 'Unread' },
                          'reading' => { class: 'bg-blue-100 text-blue-700', label: 'Reading' },
                          'read' => { class: 'bg-green-100 text-green-700', label: 'Read ‚úì' },
                          'tbr' => { class: 'bg-purple-100 text-purple-700', label: 'TBR' },
                          'dnf' => { class: 'bg-pink-100 text-pink-700', label: 'DNF' }
                        }
                        config = status_configs[book.status] || { class: 'bg-neutral-100 text-neutral-700', label: book.status }
                      %>
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold <%= config[:class] %>">
                        <%= config[:label] %>
                      </span>

                      <% if book.page_count.present? %>
                        <span class="ml-2 text-xs text-neutral-500">
                          <%= book.page_count %> pages
                        </span>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8 text-neutral-400 text-sm">
                No books planned
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
