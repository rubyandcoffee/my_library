<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-neutral-900">Series</h1>
      <p class="text-neutral-600 mt-1">Manage your book series</p>
    </div>
    <%= link_to new_series_path, class: "px-6 py-2 bg-gradient-to-r from-pink-500 to-pink-600 text-white font-medium rounded-lg hover:from-pink-600 hover:to-pink-700 transition shadow-sm" do %>
      Add New Series
    <% end %>
  </div>

  <% if @series.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @series.each do |series_item| %>
        <div class="bg-white rounded-lg shadow-sm border border-neutral-200 overflow-hidden hover:shadow-md transition">
          <div class="h-2 bg-gradient-to-r from-pink-400 to-pink-500"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-neutral-900 mb-2"><%= series_item.name %></h3>
            <p class="text-sm text-neutral-600 mb-4">by <%= series_item.author.name %></p>

            <div class="space-y-2 text-sm text-neutral-600 mb-4">
              <div class="flex items-center gap-2">
                <span class="font-medium"><%= pluralize(series_item.books.count, 'book') %></span>
              </div>
            </div>

            <div class="flex gap-2 pt-4 border-t border-neutral-100">
              <%= link_to "Edit", edit_series_path(series_item), class: "flex-1 px-4 py-2 bg-pink-100 text-pink-700 font-medium rounded-lg hover:bg-pink-200 transition text-center text-sm" %>
              <%= button_to "Delete", series_path(series_item), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this series?" }, class: "flex-1 px-4 py-2 bg-red-50 text-red-600 font-medium rounded-lg hover:bg-red-100 transition text-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20 bg-white rounded-lg border border-neutral-200">
      <div class="text-6xl mb-4">ðŸ“š</div>
      <h3 class="text-xl font-semibold text-neutral-900 mb-2">No series yet</h3>
      <p class="text-neutral-600 mb-6">Start organizing your books into series</p>
      <%= link_to "Add Your First Series", new_series_path, class: "inline-block px-6 py-2 bg-gradient-to-r from-pink-500 to-pink-600 text-white font-medium rounded-lg hover:from-pink-600 hover:to-pink-700 transition" %>
    </div>
  <% end %>
</div>
