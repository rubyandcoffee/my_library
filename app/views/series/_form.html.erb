<%= form_with(model: series_item, class: "space-y-6") do |form| %>
  <% if series_item.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 p-4">
      <h2 class="text-sm font-semibold text-red-800 mb-2"><%= pluralize(series_item.errors.count, "error") %> prohibited this series from being saved:</h2>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% series_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-neutral-700 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition", placeholder: "Enter series name" %>
  </div>

  <div>
    <%= form.label :author_id, "Author", class: "block text-sm font-medium text-neutral-700 mb-2" %>
    <%= form.collection_select :author_id, authors, :id, :name, { prompt: "Select an author" }, { class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition" } %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "px-6 py-2 bg-gradient-to-r from-pink-500 to-pink-600 text-white font-medium rounded-lg hover:from-pink-600 hover:to-pink-700 transition cursor-pointer" %>
    <%= link_to "Cancel", series_index_path, class: "px-6 py-2 bg-neutral-200 text-neutral-700 font-medium rounded-lg hover:bg-neutral-300 transition" %>
  </div>
<% end %>
